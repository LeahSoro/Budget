@using Budget.Data
@using Budget.Models;
@model ExpensesViewModel
<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-4">
            <form method="Post" action="/home/AddExpense">
                <h6>Expense</h6>
                <input type="text" class="form-control" name="Type" placeholder="Category of Expense" />
                <br />
                <select id="select-store" name="storeId" class="form-control">
                    <option value="0">~Choose a Store or add new~</option>
                    @foreach (Store store in Model.stores)
                    {
                        <option value="@store.Id">@store.Name</option>
                    }
                </select>
                <a class="btn" id="addstore">Add Store</a>
                <br />
                <input type="date" class="form-control" name="date" placeholder="Date" />
                <br />
                <input type="text" class="form-control" name="Amount" placeholder="Amount" />
                <br />
                <select id="select-method" name="methodId" class="form-control">
                    <option value="0">--</option>
                    @foreach (Method method in Model.methods)
                    {
                        <option value="@method.id">@method.Type</option>
                    }
                </select>
                <br />
                <input type="text" class="form-control" name="RecurringType" placeholder="Recurrence" />
                <br />
                <button id="submit" class="btn btn-success">Add Expense</button>

            </form>
        </div>
    </div>
</div>

<div class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <form method="post" action="/home/addstore">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title">Add Store</h4>
                </div>
                <div class="modal-body">
                    <input id="store-name" type="text" placeholder="Name" class="form-control" name="name" />
                    <br />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button id="submit" class="btn btn-primary">Add Store</button>
                </div>
            </div><!-- /.modal-content -->
        </form>
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->


@section scripts
{
    <script src="~/Scripts/AddExpense.js"></script>
}
